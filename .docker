### ALIASES

# Usage example: ffmpeg source.m4a target.mp3
alias ffmpeg='docker run --rm -v $(pwd):/tmp/workdir -w="/tmp/workdir" jrottenberg/ffmpeg -i $1 $2'

# Usage: jekyll-dev or: jekyll <arguments>
# alias jekyll='docker run --rm -v $(pwd):/tmp/jekyll -w "/tmp/jekyll" -it -p 4000:4000 irakli/jekyll'
alias jekyll-dev='jekyll s -H 0.0.0.0 -w --force_polling --limit_posts 20'

# TODO: Ansible

### Docker Management

ACTIVE_DOCKER_MACHINE=`docker-machine active`

alias dm-ssh='docker-machine ssh $ACTIVE_DOCKER_MACHINE'
alias dm-ip='docker-machine ip $ACTIVE_DOCKER_MACHINE'
alias dm-env='docker-machine env $ACTIVE_DOCKER_MACHINE'
alias dm-inspect='docker-machine inspect $ACTIVE_DOCKER_MACHINE'
alias dm-config='docker-machine config $ACTIVE_DOCKER_MACHINE'
alias docker-stats="docker stats $(docker ps|grep -v 'NAMES'| rev | awk '{print $1}' | rev|tr '\n' ' ')"
alias dm-ps='docker ps --format="table {{ .ID }}\\t{{ .Status }}\\t{{ .Image }}\\t{{ .Names }}"'
alias dm-psa='docker ps -a --format="table {{ .ID }}\\t{{ .Status }}\\t{{ .Image }}\\t{{ .Names }}"'

alias dm-clean='docker ps -a -f status=exited -q | xargs docker rm -f'
alias dm-cleanimages="docker images | grep -i none | awk '{print $3}' | xargs docker rmi -f"
